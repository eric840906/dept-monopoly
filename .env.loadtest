# Load Testing Configuration for Dept-Monopoly
# Enable this configuration when running performance tests

# Core load testing settings
LOAD_TEST_MODE=true
NODE_ENV=production

# Connection limits - Allow high concurrent connections for testing
CONNECTION_LIMIT_PER_IP=200

# Socket.IO timeouts optimized for testing
SOCKET_PING_TIMEOUT=30000
SOCKET_PING_INTERVAL=25000
SOCKET_CONNECTION_RECOVERY=300000

# Rate limiting - Higher limits for testing
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (use dummy values for testing)
HOST_TOKEN=default-host-token
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server configuration
PORT=3000

# Performance monitoring
ENABLE_METRICS=true