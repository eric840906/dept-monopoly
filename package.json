{
  "name": "dept-monopoly",
  "version": "1.0.0",
  "description": "Real-time multiplayer Monopoly-style team-building board game",
  "main": "server/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js",
    "dev:https": "cross-env NODE_ENV=development ENABLE_HTTPS=true nodemon server/index.js",
    "generate-certs": "mkdir -p certificates && openssl req -x509 -newkey rsa:4096 -keyout certificates/key.pem -out certificates/cert.pem -days 365 -nodes -subj '/CN=localhost'",
    "loadtest": "cross-env HOST_TOKEN=default-host-token LOAD_TEST_MODE=true CONNECTION_LIMIT_PER_IP=200 nodemon server/index.js",
    "dev:debug": "cross-env NODE_ENV=development DEBUG=* nodemon server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build --platform linux/amd64 -t dept-monopoly:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.docker dept-monopoly:latest",
    "docker:deploy": "./docker-deploy.sh",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f dept-monopoly",
    "docker:health": "curl -f http://localhost:3000/network-info || echo 'Health check failed'"
  },
  "keywords": [
    "game",
    "multiplayer",
    "phaser",
    "socket.io",
    "team-building"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1"
  }
}
