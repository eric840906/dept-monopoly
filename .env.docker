# Docker Environment Configuration
# This file should be used with docker-compose for production deployment

# Server Configuration
NODE_ENV=production
PORT=3000

# Security Configuration - MUST BE CHANGED IN PRODUCTION
HOST_TOKEN=CHANGE_ME_IN_PRODUCTION_RANDOM_64_CHAR_STRING_HERE_12345678
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_CONNECTION_TIMEOUT=20000
SOCKET_HEARTBEAT_TIMEOUT=5000
SOCKET_HEARTBEAT_INTERVAL=25000

